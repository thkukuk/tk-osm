leisure=sports_center | leisure=sports_centre
	{name '${name} (${sport})' | '${sport}' | '${name}' | 'Sportzentrum'}
						[0x19 level 3]
leisure=stadium {name '${name} (${sport})' | '${sport}' | '${name}'}
						[0x19 level 3]
