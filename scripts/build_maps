  COUNTRY=${COUNTRY##SRTM-}
  MAPS="srtm"
  SPLITTER_MAXNODES=3000000
  case "$COUNTRY" in
  benelux)
    TILEID=71700501
    COUNTRY_ABBR="BNL"
    ;;
  channel_islands)
    TILEID=72200001
    COUNTRY_ABBR="GBR"
    ;;
  croatia)
    TILEID=72300001
    COUNTRY_ABBR="HRV"
    ;;
  czech_republic)
    TILEID=71300501
    COUNTRY_ABBR="CZE"
    ;;
  DACH)
    TILEID=71208001
    COUNTRY_ABBR="DACH"
    ;;
  europe)
    TILEID=71105001
    COUNTRY_ABBR="EU"
    ;;
  france)
    TILEID=71609001
    COUNTRY_ABBR="FRA"
    ;;
  iceland)
    TILEID=72550501
    COUNTRY_ABBR="ISL"
    ;;
  india)
    TILEID=72102001
    COUNTRY_ABBR="IND"
    ;;
  ireland)
    TILEID=71340501
    COUNTRY_ABBR="IRL"
    ;;
  italy)
    TILEID=71809001
    COUNTRY_ABBR="ITA"
    ;;
  canada)
    TILEID=71408001
    COUNTRY_ABBR="CAN"
    ;;
  portugal)
    TILEID=72502001
    COUNTRY_ABBR="PRT"
    ;;
  scandinavia)
    TILEID=71909001
    COUNTRY_ABBR="DNS"
    ;;
  spain)
    TILEID=72402001
    COUNTRY_ABBR="ESP"
    ;;
  canary_islands)
    TILEID=72402701
    COUNTRY_ABBR="ESP"
    ;;
  usa*)
    TILEID=71510001
    COUNTRY_ABBR="USA"
    ;;
  new_zealand)
    TILEID=72601001
    COUNTRY_ABBR="NZL"
    ;;
  monaco)
    TILEID=72681001
    COUNTRY_ABBR="MCO"
    ;;
  singapore)
    TILEID=72661001
    COUNTRY_ABBR="SGP"
    ;;
  great_britain)
    TILEID=72000001
    COUNTRY_ABBR="GBR"
    ;;
  germany)
    TILEID=71690001
    COUNTRY_ABBR="DEU"
    ;;
  *)
    echo "SRTM-Country unknown!"
    exit 1
    ;;
  esac
  ;;
DACH)
  MAPS="basemap basemap-noPOI bicycling oepnv wanderwege" # marine keepright address fixme
  TILEID=71200001
  COUNTRY_ABBR="DACH"
  ;;
germany)
  MAPS="basemap" # mkgmap
  TILEID=71690001
  COUNTRY_ABBR="DEU"
  ;;
europe)
  MAPS="basemap bicycling oepnv wanderwege" # marine streets keepright fixme
  TILEID=71100001
  COUNTRY_ABBR="EU"
  #SPLITTER_MAXNODES=1200000
  ;;
benelux)
  MAPS="basemap bicycling oepnv wanderwege" # marine keepright fixme
  TILEID=71700001
  COUNTRY_ABBR="BNL"
  ;;
channel_islands)
  MAPS="basemap bicycling oepnv" # wanderwege keepright marine fixme
  TILEID=72200001
  COUNTRY_ABBR="GBR"
  ;;
croatia)
  MAPS="basemap bicycling oepnv wanderwege" # marine keepright marine fixme
  TILEID=72300001
  COUNTRY_ABBR="HRV"
  ;;
czech_republic)
  MAPS="basemap bicycling oepnv wanderwege" # marine keepright fixme
  TILEID=71300001
  COUNTRY_ABBR="CZE"
  ;;
ireland)
  MAPS="basemap bicycling oepnv wanderwege" # marine keepright fixme
  TILEID=71340001
  COUNTRY_ABBR="IRL"
  ;;
france)
  MAPS="basemap bicycling oepnv wanderwege" # marine keepright fixme
  TILEID=71600001
  COUNTRY_ABBR="FRA"
  ;;
great_britain)
  MAPS="basemap bicycling oepnv wanderwege" # keepright marine fixme
  TILEID=72000001
  COUNTRY_ABBR="GBR"
  ;;
iceland)
  MAPS="basemap wanderwege oepnv bicycling" # marine keepright fixme
  TILEID=72550001
  COUNTRY_ABBR="ISL"
  ;;
india)
  MAPS="basemap" # bicycling oepnv marine wanderwege keepright fixme
  TILEID=72100001
  COUNTRY_ABBR="IND"
  ;;
italy)
  MAPS="basemap bicycling oepnv wanderwege" # marine keepright fixme
  TILEID=71800001
  COUNTRY_ABBR="ITA"
  ;;
canada)
  MAPS="basemap wanderwege" # bicycling oepnv marine keepright fixme
