#!/bin/bash

COUNTRY=${1:-DACH}
SPLITTER_MAXNODES=1400000
#SPLITTER_MAXNODES=700000
SPLITTER_OVERLAP="0 --keep-complete=true"
SPLITTER_OVERLAP_OLD=10000

# URL COUNTRY SUFFIX
DownloadSource()
{
  local UPDATE=0
  local URL=$1
  local OSMDATA=$2.$3

  if [ x"$URL" != x -a ! -f no-download ]; then
    mkdir -p data/osm
    cd data/osm
    if [ -f $OSMDATA ]; then
      UPDATE=`echo $(((($(date +%s)-$(stat -c %Y ${OSMDATA})))/86400))`
    else
      UPDATE=1;
    fi
    if [ $UPDATE -ne 0 ]; then
      test -f $OSMDATA && mv -f $OSMDATA $OSMDATA.tmp
      wget -nv ${URL}${OSMDATA}
      if [ $? -ne 0 ]; then
         echo "wget failed!"
         test -f $OSMDATA.tmp && mv -f  $OSMDATA.tmp $OSMDATA
         exit 1
      fi
      test -f $OSMDATA.tmp && rm -f $OSMDATA.tmp
    fi
    cd ../..
  fi
}

# Split country osm data into tiles
SplitIntoTiles()
{
SRCDIR=$1
OUTPUTDIR=build/$COUNTRY/$2

rm -rf $OUTPUTDIR
mkdir -p $OUTPUTDIR
if [ -f tk-osm/basemap/areas.$COUNTRY.list -a "$OUTPUTDIR" == "tiles" ]; then
	AREALIST="--split-file=tk-osm/basemap/areas.$COUNTRY.list"
fi

PRECOMP_SEA=""
if [ -e data/sea/current ]; then
  PRECOMP_SEA="--precomp-sea=data/sea/current"
fi

#case "$COUNTRY" in
#  *)
#  NOTRIM="--no-trim"
#  ;;
#esac
#wget http://download.geonames.org/export/dump/cities15000.zip
tilesplitter --mapid=$TILEID --max-nodes=${SPLITTER_MAXNODES} --overlap=${SPLITTER_OVERLAP} --max-areas=1024 $NOTRIM $PRECOMP_SEA --geonames-file=tk-osm/scripts/cities/${COUNTRY_ABBR}.txt  --description="$DESC" --output=pbf --output-dir=$OUTPUTDIR $SRCDIR/$COUNTRY.$SUFFIX $AREALIST
RETVAL=$?
#if [ $RETVAL -eq 255 ] ; then
#   tilesplitter --mapid=$TILEID --max-nodes=${SPLITTER_MAXNODES} --overlap=${SPLITTER_OVERLAP_OLD} --max-areas=1024  $NOTRIM $PRECOMP_SEA --geonames-file=tk-osm/scripts/cities/${COUNTRY_ABBR}.txt  --description="$DESC" --output=pbf --output-dir=$OUTPUTDIR $SRCDIR/$COUNTRY.$SUFFIX $AREALIST
#   RETVAL=$?
#fi
if [ $RETVAL -ne 0 -o ! -f $OUTPUTDIR/${TILEID}.osm.pbf ] ; then
  echo "tilesplitter failed!"
  exit 1
fi
test -f $SRCDIR/timestamp.txt && cp -v $SRCDIR/timestamp.txt $OUTPUTDIR
}

SUFFIX="osm.pbf"

case "$COUNTRY" in
